<h2>Hotel Dashboard</h2>
 
 <section class="tasks-container">
   

     <form method="POST" action="/task/search">
        <label>Search By</label>
        <select name="task-search">
                <option value="view1">Lake view</option>
                <option value="view2">City view</option>
                <option value="view3">Street view</option>
                <option value="type1">Regular Room</option>
                <option value="type2">Featured Room</option>
        </select>
        <input type="submit" value="Search">
     </form> <br><br>

    <table border="1" style="text-align: center;">
        <thead>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Room Location</th>
                <th>Room Type</th>
        </thead>
        <tbody>
                       {{#each data}}

                <tr>
                   <td>
                        <a href="" class="task-title">{{this.name}}</a>
                   </td>
                   <td>
                       <span>{{this.description}}</span>
                      
                   </td>
                   <td>
                        <span>{{this.price}}</span>
                   </td>
                   <td>
                       <span>{{this.views}}</span>
                   </td>
                   <td>
                       <span>{{this.type}}</span>
                   </td>
                   <td>
                        <a href="/task/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                        <a href="/task/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                   </td> 
                </tr>
                 {{else}}
                    <td colspan="5">
                        <p>No tasks in the database</p>
                    </td>

                {{/each}}
    </tbody>
    </table>
 
</section>

<div id="tasks-links-holder">
    <a href="/task/add">Add Hotel</a>
</div>